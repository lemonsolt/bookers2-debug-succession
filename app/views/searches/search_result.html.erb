<% if @range == "User" %>
  <h2>Users seatch for "<%= @word %>"</h2>
  <table class="table">
    <tr>
      <th></th>
      <th>Name</th>
      <th>introduction</th>
    </tr>
    <% @users.each do |user| %>
      <tr>
        <td><%= image_tag  user.get_profile_image, size: '50x50'%></td>
        <td><%= user.name %></td>
        <td><%= user.introduction %></td>
      </tr>
    <% end %>
  </table>
<% else %>
   <h2>Books seatch for "<%= @word %>"</h2>
  <table class="table">
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
    <% @books.each do |book| %>
      <tr>
        <td><%= image_tag  book.user.get_profile_image, size: '50x50'%></td>
        <td><%= link_to book.title , book_path(book.id) %></td>
        <td><%= book.body %></td>
      </tr>
    <% end %>
  </table>
<% end %>